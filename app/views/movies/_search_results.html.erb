<% if @movies.any? %>
  <% @movies.each do |movie| %>
    <ul class="movie-box">
      <li><%= link_to image_tag("#{movie.image_url}", border: 0), movie_path(movie) %></li>
      <li><%= link_to "#{movie.title}", movie_path(movie) %></li>
    </ul>
  <% end %>
<% else %>
  <ul class="movie-box">
    <li style="color: red">There are no movies defined containing the term(s) '<%= @search %>'</li>
  </ul>
<% end %>